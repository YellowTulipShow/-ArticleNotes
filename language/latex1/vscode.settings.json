    //     "%LINE%",
    //     "-reuse-instance",
    //     "-inverse-search",
    //     "\"F:/Microsoft VS Code/Code.exe\" \"F:/Microsoft VS Code/resources/app/out/cli.js\" -r -g \"%f:%l\"", // 注意修改路径
    //     "%PDF%"
    // ]
}
